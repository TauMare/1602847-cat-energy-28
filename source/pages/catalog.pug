extends common/base

block variables
	-
		title = `Каталог продукции | ${PROJECT_NAME}`
		currentPage = 'catalog.html'

block main
	section.catalog
		h1._title Каталог продукции
		ul._products(aria-label="Наша продукция.")
			each product, index in products
				li.product
					+adaptivePic({className: 'product__img', loading: 'eager', alt: product.title, src: `../img/catalog/catalog-${index}`, ext: 'png', sizes: product.sizes, picClass: 'product__pic', medias: ['(min-width: 1220px)', '(min-width: 707px)'], suffixes: ['desk', 'tab'] })
					h3._title=product.title + " " + product.weight + " г"
					dl.properties
						dt._title Масса
						dd._subtitle #{product.weight} г
						dt._title Вкус
						dd._subtitle=product.flavor
						dt._title Цена
						dd._subtitle #{product.price} ₽
					button._button.button заказать
			include includes/catalog/above
	include includes/catalog/extra-goods
	include includes/catalog/promo
